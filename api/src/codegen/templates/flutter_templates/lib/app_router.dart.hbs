import 'package:flutter/material.dart';
import 'package:go_router/go_router.dart';
import 'package:hooks_riverpod/hooks_riverpod.dart';

{{#each entities}}
import 'features/{{route}}/presentation/{{route}}_list_page.dart';
import 'features/{{route}}/presentation/{{route}}_form_page.dart';
{{/each}}

final appRouterProvider = Provider<GoRouter>((ref) {
  return GoRouter(
    routes: [
      {{#each entities}}
      GoRoute(
        path: '/{{route}}',
        name: '{{name}}List',
        builder: (context, state) => const {{name}}ListPage(),
        routes: [
          GoRoute(
            path: 'new',
            name: '{{name}}New',
            builder: (context, state) => const {{name}}FormPage(),
          ),
          GoRoute(
            path: ':id',
            name: '{{name}}Edit',
            builder: (context, state) => {{name}}FormPage(id: state.pathParameters['id']),
          ),
        ],
      ),
      {{/each}}
    ],
  );
});
